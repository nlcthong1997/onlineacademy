{
  "type": "object",
  "required": [
    "username",
    "password",
    "email"
  ],
  "additionalProperties": false,
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1
    },
    "password": {
      "type": "string",
      "minLength": 8
    },
    "email": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9_\\.]{5,32}@[a-z0-9]{2,}(\\.[a-z0-9]{2,4}){1,2}$",
      "minLength": 11
    },
    "full_name": {
      "type": "string",
      "minLength": 10
    },
    "role": {
      "anyOf": [
        { "enum": [ "admin", "user" ] }
      ],
      "type": "string"
    }
  }
}